
<div class="container d-flex justify-content-center p-5" style="min-height: 100vh;">
  <div class="col-md-6">
    <h1><%= @article.title %></h1>
    <p><%= @article.content %></p>

    <%= link_to "Update", edit_article_path(@article), class: "btn btn-primary mr-2" %>
    <%= link_to "Delete this article",
                article_path(@article),
                class: "btn btn-danger mr-2",
                method: :delete,
                data: { confirm: "Are you sure?" } %>
    <%= link_to "Back to all articles", articles_path, class: "btn btn-secondary" %>
  </div>
</div>
